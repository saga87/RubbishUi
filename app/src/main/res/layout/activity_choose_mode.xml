<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/top"
        layout="@layout/top"/>
    
    <ImageView
        android:id="@+id/iv_choose"
        android:layout_width="100dp"
        android:layout_height="133dp"
        android:src="@drawable/tong_hs"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你选择的是  可回收物"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="35sp"/>


    <TextView
        android:id="@+id/tv_choose_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置成功后该设备的桶内只能投放可回收物"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textColor="#333333"
        android:textSize="20sp"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">
        
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:text="退回重选"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/shape_corner_5_999999"/>
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/shape_corner_5_096dd9"/>




    </LinearLayout>











</LinearLayout>