<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/surfaceview2"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="801dp"
        android:layout_height="168dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="240dp"
        android:text="你好，李玲丽 \n你本次投递垃圾重量：1.02kg"
        android:gravity="center"
        android:textSize="60sp"
        android:textColor="#333333"/>
    
    
    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:text="请判断垃圾分类是否合格"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="398dp"
        android:textColor="#333333"
        android:textSize="44sp"/>
    
    <LinearLayout
        android:id="@+id/ll_choose"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/tv_hg"
            android:layout_width="380dp"
            android:layout_height="140dp"
            android:layout_marginLeft="40dp"
            android:text="合格"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="44sp"
            android:background="@drawable/shape_corner_5_07c160"/>

        <TextView
            android:id="@+id/tv_yb"
            android:layout_width="380dp"
            android:layout_height="140dp"
            android:layout_marginLeft="30dp"
            android:text="一般"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="44sp"
            android:background="@drawable/shape_corner_5_a0a0a0"/>

        <TextView
            android:id="@+id/tv_bhg"
            android:layout_width="380dp"
            android:layout_height="140dp"
            android:layout_marginLeft="30dp"
            android:text="不合格"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="44sp"
            android:background="@drawable/shape_corner_5_fa5151"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_choose_sure"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cx"
            android:layout_width="380dp"
            android:layout_height="140dp"
            android:layout_marginLeft="245dp"
            android:text="重选"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="44sp"
            android:background="@drawable/shape_corner_5_a0a0a0"/>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="380dp"
            android:layout_height="140dp"
            android:layout_marginLeft="30dp"
            android:text="确认"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="44sp"
            android:background="@drawable/shape_corner_5_1585ff"/>

    </LinearLayout>

    
    
</LinearLayout>