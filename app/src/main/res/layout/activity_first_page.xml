<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="130dp"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="448dp"
            android:layout_height="156dp"
            android:text="  请扫码识别身份\n或者输入手机号码"
            android:layout_gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="56sp"/>

        <ImageView
            android:id="@+id/iv_code"
            android:layout_marginTop="80dp"
            android:layout_width="200dp"
            android:layout_height="280dp"
            android:layout_marginLeft="84dp"
            android:src="@drawable/tong_yf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="560dp"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="130dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="20dp"
            android:hint="输入手机号"
            android:gravity="center_vertical"
            android:textSize="44sp"
            android:background="@drawable/shape_corner_5_ffffff"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="1"
                android:textSize="40sp"
                android:textColor="#333333"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_eeeeee"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="2"
                android:textSize="40sp"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_eeeeee"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="3"
                android:layout_marginLeft="10dp"
                android:textSize="40sp"
                android:textColor="#333333"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_eeeeee"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="4"
                android:textSize="40sp"
                android:textColor="#333333"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_eeeeee"/>
            <TextView
                android:id="@+id/tv5"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="5"
                android:textSize="40sp"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_eeeeee"/>
            <TextView
                android:id="@+id/tv6"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="6"
                android:layout_marginLeft="10dp"
                android:textSize="40sp"
                android:textColor="#333333"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_eeeeee"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv7"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="7"
                android:textSize="40sp"
                android:textColor="#333333"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_eeeeee"/>
            <TextView
                android:id="@+id/tv8"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="8"
                android:textSize="40sp"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_eeeeee"/>
            <TextView
                android:id="@+id/tv9"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="9"
                android:layout_marginLeft="10dp"
                android:textSize="40sp"
                android:textColor="#333333"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_eeeeee"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="清空"
                android:textSize="40sp"
                android:textColor="#333333"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_eeeeee"/>
            <TextView
                android:id="@+id/tv0"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="0"
                android:textSize="40sp"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_eeeeee"/>
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="确认"
                android:layout_marginLeft="10dp"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/shape_corner_5_007aff"/>

        </LinearLayout>
        
        
    </LinearLayout>

    
</LinearLayout>